{% extends 'base.html.twig' %}

{% block title %}Import Products{% endblock %}

{% block body %}
    <div class="container-fluid container-lg py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-xl-7">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3>Import Products</h3>
                        <div>
                            <a class="btn btn-secondary" href="{{ path('app_product_index') }}">Back</a>
                            <a class="btn btn-success" href="{{ path('app_product_export') }}">Export</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('app_product_import') }}" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="file">Choose CSV File</label>
                                <input type="file" name="file" id="file" class="form-control {% if errors is not empty %}border border-danger{% endif %}" accept=".csv" required />
                                {% if errors is not empty %}
                                <div class="text-danger">
                                    <ul>
                                        {% for error in errors %}
                                            <li>{{ error }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                            </div>
                            <button type="submit" class="btn btn-primary mt-3 float-end">Import</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
