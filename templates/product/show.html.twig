{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container-fluid container-lg py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-xl-8">
                <div class="card">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title">Product Information</h3>
                            <div class="d-flex justify-content-start gap-1">
                                <a class="btn btn-secondary d-inline-block mb-1" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                                <a class="btn btn-info d-inline-block mb-1 text-white" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                                <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 row">
                                <div class="col-sm-4 font-weight-bold">Id</div>
                                <div class="col-sm-8">{{ product.id }}</div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-4 font-weight-bold">Name</div>
                                <div class="col-sm-8">{{ product.name }}</div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-4 font-weight-bold">Description</div>
                                <div class="col-sm-8">{{ product.description }}</div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-4 font-weight-bold">Price</div>
                                <div class="col-sm-8">{{ product.price }}</div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-4 font-weight-bold">Stock Quantity</div>
                                <div class="col-sm-8">{{ product.stockQuantity }}</div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-4 font-weight-bold">Created Date</div>
                                <div class="col-sm-8">{{ product.createdDate ? product.createdDate|date('Y-m-d H:i:s') : '' }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
